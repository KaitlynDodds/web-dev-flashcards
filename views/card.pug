extends layout.pug

block main
	include includes/name-display.pug

	include includes/card-title.pug

	.card 
		.prompt
			h3 #{card.prompt}

		if (side === 'question') 
			a(href=`/topics/${topic.title}/cards/${card_id}?side=answer`) Show Answer
		else 
			p #{card.answer}

		a(href=`/topics/${topic.title}/cards/${card_id}/next`) Next

